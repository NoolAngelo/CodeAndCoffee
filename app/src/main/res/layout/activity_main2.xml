<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wave"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    tools:layout_editor_absoluteY="-192dp">


        <TextView
            android:id="@+id/tvGoodMorning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Good Morning"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvGrabYourCoffee"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.153" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="45dp"
            android:layout_height="36dp"
            app:layout_constraintBottom_toBottomOf="@+id/searchCoffee"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.64"
            app:layout_constraintStart_toEndOf="@+id/searchCoffee"
            app:layout_constraintTop_toTopOf="@+id/searchCoffee"
            app:layout_constraintVertical_bias="0.279"
            app:srcCompat="@drawable/tune_fill0_wght400_grad0_opsz24" />

        <TextView
            android:id="@+id/tvGrabYourCoffee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="Grab your first coffee in this morning"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvGoodMorning"
            app:layout_constraintVertical_bias="0.016" />

        <SearchView
            android:id="@+id/searchCoffee"
            android:layout_width="303dp"
            android:layout_height="34dp"
            android:background="#DCC6BE"
            android:fadingEdge="vertical"
            android:iconifiedByDefault="false"
            android:queryHint="Search Coffee"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.281">

        </SearchView>


        <HorizontalScrollView
            android:id="@+id/horizontalScrollView2"
            android:layout_width="418dp"
            android:layout_height="61dp"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.365">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/btnCoffee1"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_marginLeft="20dp"
                            android:backgroundTint="#DCC6BE"
                            android:text="Cold Brew" />

                        <Button
                            android:id="@+id/btnCoffee3"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_marginLeft="20dp"
                            android:backgroundTint="#DCC6BE"
                            android:text="Espresso" />

                        <Button
                            android:id="@+id/btnCoffee2"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_marginLeft="20dp"
                            android:backgroundTint="#42271E"
                            android:text="Cappuccino" />

                        <Button
                            android:id="@+id/latte"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_marginLeft="20dp"
                            android:backgroundTint="#DCC6BE"
                            android:text="Latte" />

                        <Button
                            android:id="@+id/americano"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:backgroundTint="#DCC6BE"
                            android:text="Americano" />


                </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/tvPopularCoffee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_tamma"
            android:text="Popular Coffee"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.09"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.467" />

        <TextView
            android:id="@+id/tvSeeAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="336dp"
            android:text="See All"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.925"
            app:layout_constraintStart_toEndOf="@+id/tvPopularCoffee"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_to_home"
            android:layout_width="90dp"
            android:layout_height="109dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="@+id/tvGoodMorning"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cafelogo" />

        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="94dp"
            android:layout_height="79dp"
            android:layout_marginTop="56dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.943"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/me_profilepicround" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.817">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                        <ImageButton
                            android:id="@+id/cappucino_img"
                            android:layout_width="133dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/round_corners"
                            android:scaleType="centerCrop"
                            android:src="@drawable/cappucino" />

                        <ImageButton
                            android:id="@+id/cold_brew_img"
                            android:layout_width="133dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:background="@android:color/transparent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/coldbrew" />

                        <ImageButton
                            android:id="@+id/latte_machiato"
                            android:layout_width="133dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:background="@android:color/transparent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/coffee_latte_machiato" />

                        <ImageButton
                            android:id="@+id/hot_choco1"
                            android:layout_width="133dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:background="@android:color/transparent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/hot_choco1" />

                        <ImageButton
                            android:id="@+id/hot_choco2"
                            android:layout_width="133dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:background="@android:color/transparent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/hot_choco2" />

                        <ImageButton
                            android:id="@+id/americano_coffee"
                            android:layout_width="133dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@android:color/transparent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/americano_coffee" />


                </LinearLayout>
        </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>